{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "cucumber", "semver"]
  },
  "include": ["features/**/*.ts", "config/**/*.ts", "typings/**/*.d.ts"]
}
